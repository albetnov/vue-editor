{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "lib/**/*",
    "lib/**/*.vue",
    "lib/types.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/App.vue",
    "src/main.ts"
  ],
  "files": [
    "lib/types.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "lib/*": [
        "./lib/*"
      ]
    }
  }
}